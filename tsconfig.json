{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },
    "types": ["node", "react"]
  },
  "include": ["app", "components", "data", "next-env.d.ts", "next.config.mjs"],
  "exclude": ["node_modules"]
}
